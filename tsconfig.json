{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "declarationDir": "./lib/typings/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "allowJs": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ]
}
